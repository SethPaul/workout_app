{
  "agentCanUpdateSnapshot": true,
  "install": "git clone https://github.com/flutter/flutter.git -b stable --depth 1 && export PATH=\"$PWD/flutter/bin:$PATH\" && flutter doctor && flutter pub get",
  "start": "export PATH=\"$PWD/flutter/bin:$PATH\" && chmod +x scripts/*.sh || true",
  "terminals": [
    {
      "name": "Flutter Web Dev",
      "command": "export PATH=\"$PWD/flutter/bin:$PATH\" && flutter run -d web-server --web-port 8080 --web-hostname 0.0.0.0"
    },
    {
      "name": "Test Runner",
      "command": "export PATH=\"$PWD/flutter/bin:$PATH\" && flutter test --reporter=compact"
    }
  ]
}