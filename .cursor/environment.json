{
  "agentCanUpdateSnapshot": true,
  "install": "flutter pub get && dart run build_runner build --delete-conflicting-outputs",
  "start": "chmod +x scripts/*.sh",
  "terminals": [
    {
      "name": "Flutter Web Dev",
      "command": "flutter run -d web-server --web-port 8080"
    },
    {
      "name": "Test Watcher",
      "command": "flutter test --reporter=json | tee test_results.json"
    },
    {
      "name": "Build Runner Watch",
      "command": "dart run build_runner watch --delete-conflicting-outputs"
    }
  ]
}